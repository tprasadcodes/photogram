<div class="card mb-3">
  <h2 class="card-header h4">
    Vote #<%= vote.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @vote.user.present? %>
          <%= link_to vote.user, vote.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>Photo</dt>
      <!-- Display photo_id start -->
      <dd>
        <% if @vote.photo.present? %>
          <%= link_to vote.photo, vote.photo %>
        <% end %>
      </dd>
      <!-- Display photo_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back vote, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link vote start -->
      <div class="col">
        <% if current_user == @vote.user %>
          <%= link_to edit_vote_url(vote), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link vote end -->

      <!-- Delete link vote start -->
      <div class="col">
        <% if current_user == @vote.user %>
          <%= link_to vote, method: :delete, data: { confirm: "Do you really want to delete this vote?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link vote end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(vote.updated_at) %> ago
  </div>
</div>
