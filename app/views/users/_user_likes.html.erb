<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#user_likes_new_form">
      Add vote
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.likes.each do |vote| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to vote, vote %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_likes_new_form">
        <%= render partial: "users/user_likes_new_form" %>
      </div>
    </div>

  </ul>
</div>
