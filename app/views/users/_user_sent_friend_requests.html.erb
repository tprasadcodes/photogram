<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Sent Friend Requests

    <a data-toggle="collapse" href="#user_sent_friend_requests_new_form">
      Add friend request
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.sent_friend_requests.each do |friend_request| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to friend_request, friend_request %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_sent_friend_requests_new_form">
        <%= render partial: "users/user_sent_friend_requests_new_form" %>
      </div>
    </div>

  </ul>
</div>
