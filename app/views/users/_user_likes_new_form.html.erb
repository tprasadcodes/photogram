<!-- Form vote start -->
<%= form_with(model: @vote, local: true) do |f| %>
<!-- Form vote end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for photo_id start -->
  <div class="form-group">
    <%= f.label :photo_id %>

    <!-- Input for photo_id start -->
    <%= f.collection_select :photo_id, Photo.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for photo_id end -->
  </div>
  <!-- Label and input for photo_id end -->

  <%= f.submit "Create vote", class: "btn btn-block btn-outline-secondary" %>
<% end %>
